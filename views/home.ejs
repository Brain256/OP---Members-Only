<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>Members Only</h1>
    <% if (locals.user) {%>
        <h1>WELCOME BACK <%= user.username %></h1>
        <a href="/users/log-out">LOG OUT</a>
        <a href="/users/member-sign-up">Become a Member</a>
        <a href="/messages/new-message">Create a Message</a>
    <% } else { %>
        <a href="/users/sign-up">Sign Up</a>
        <a href="/users/log-in">Log In</a>
    <%}%>

    <% if(messages) { %>
        <div>
            <% messages.forEach(msg => { %>
                <% if(locals.user) { %>
                    <div><%= msg.username %></div>
                    <div><%= msg.time %></div>
                <% } %>

                <div><%= msg.title %></div>
                <div><%= msg.text %></div>
                 
            <% }) %>
        </div>
    <% } %>


    
</body>
</html>